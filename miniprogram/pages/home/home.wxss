/* miniprogram/pages/home/home.wxss */
.container{
  overflow: hidden;
  margin:0 auto;
  height: 100%;
  background-size: 100% 100%; 
}
.bj{
  position: absolute;
  width: 100%;
  height: 100%;
  background:-webkit-linear-gradient(left top,#EEA2AD,#FF0000);
  opacity: .3;
}
.box-c{
  width: 100%;
  height: 80px;
  margin-top: 10px;
  position: relative;
}
.left{
  float: left;
  width: 50px;
  height: 80px;
  display: flex;
  padding:0 10px;
  text-align: center;
}
.right{
  float: right;
  width: 50px;
  height: 80px;
  display: flex;
  padding:0 10px;
  text-align: center;
}
.day{
  position: absolute;
  left: 50%;
  margin-left: -20px;
  top: 15px;
}
.toux{
  width: 50px;
  height: 50px;
}
.toux image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.toux text{
  text-align: center;
}
.textH1{
  position: absolute;
  top: 50%;
  letter-spacing: 10px;
  margin-top: -60px;
}
.wte{
  color:red;
  font-size: 25px;
  font-weight: 700;
}

.bjt{
  position: absolute;
  width: 100%;
  height: 100%;
}
.myCanvas{
  background-color: transparent;
  width: 90px;
  height:400px;
}

.v-canvas{
    position: fixed;
    right: 20px;
    bottom: 60px;
    width: 90px;
    background-color: transparent;
}

.aon{
  position: absolute;
  white-space:nowrap;/* 防止向下换行*/
  animation-timing-function: linear;
  animation-fill-mode: none;
}
.doommview{
  z-index: 3;
  height: 80%;
  width: 100%;
  position: absolute;
}
.button{
  position: absolute;
  width: 100%;
  bottom: 10px;
  text-align: right;
}
.button .xing{
  display: inline-block;
  width: 40px;
  height: 35px;
  margin-right: 10px;
  animation: aa 1s infinite;
}


@keyframes first{
  from{left: 100%; }
  to{left: -100%;}
}

@keyframes aa{
  0%{
    transform: scale(0.5)
  }
  100%{
    transform: scale(1)
  }
}