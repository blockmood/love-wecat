/* miniprogram/pages/photo/photo.wxss */
.page{
  position: relative;
}
.button{
  padding:10px 0;
  background: #FFAEB9;
  font-size: 12px;
  text-align: center;
  position: fixed;
  width: 100%;
}
.modal-bj{
  position: fixed;
  width: 100%;
  height: 100%;
  background: #000;
  background-size: 100% 100%;
  margin:0;
  top:0;
  min-height: 100%;
  opacity: .5;
  z-index: 9;
}
.modal{
  width: 80%;
  height: 20%;
  padding-bottom: 30%;
  background: #fff;
  border-radius:5px;
  position: absolute;
  top: 120%;
  left: 50%;
  margin-left: -40%;
  z-index: 10;
  text-align: center;
  overflow: hidden;
}
.autoText{
  padding:20px 0 0px 0;
}
.autoBtn{
  width: 100%;
  display: block;
  height: 40px;
  text-align: center;
  position: absolute;
  line-height: 40px;
  font-size: 14px;
  bottom: 0;
  border-radius: 0;
  background: #FFAEB9;
  border:none;
}
.img-box{
  width: 85%;
  float: left;
}
.img-box image{
  width: 80px;
  height: 90px;
  float: left;
  margin-left: 10px;
  margin-bottom: 10px;
}
.no-pic{
  font-size: 14px;
  padding:10px 0;
  text-align: center;
}
.time{
  width: 30px;
  float: left;
  margin-left: 10px;
}
.one-box{
  margin-top: 10px;
  overflow: hidden;
}
.lc-box{
  overflow: hidden;
  border-bottom: 1px solid #F4F4F4;
}
.con{
  padding: 40px 0 0 0;
}